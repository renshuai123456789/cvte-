<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cvte.dao.blackpeopleMapper" >

     <select id="getPeople"  parameterType="int" resultType="cvte.vo.blackpeople">

         select * from blackpeople where userid=#{id};

     </select>

    <update id="updatePeople" parameterType="cvte.vo.blackpeople" >

        update blackpeople set userid=#{userid},starttime=#{starttime},lasttime=#{lasttime} where userid=#{userid};

    </update>

    <insert id="insertPeople" parameterType="cvte.vo.blackpeople" >

        insert into blackpeople (userid,starttime,lasttime) values (#{userid},#{starttime},#{lasttime});

    </insert>

    <delete id="delete" parameterType="int">
        delete from blackpeople where userid=#{id};
    </delete>


</mapper>